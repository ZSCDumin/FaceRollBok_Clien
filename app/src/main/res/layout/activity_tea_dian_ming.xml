<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.administrator.face.TeaDianMing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3ee3aa"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gate_reg_back"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="手动签到"
            android:textSize="24sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="教师id："
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />
            <EditText
                android:id="@+id/gate_reg_tid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:background="@null"
                android:textSize="18sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical|right"
                android:text="学生id："/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>

            <EditText
                android:id="@+id/gate_reg_sid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical|right"
                android:text="科目编号："/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>

            <EditText
                android:id="@+id/gate_reg_cid"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="20sp"
                android:layout_weight="1" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical|right"
                android:text="状态："/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>

            <EditText
                android:id="@+id/gate_reg_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>
        <Button
            android:id="@+id/gate_reg_submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/btnshape"
            android:text="提交考勤"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
